{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-3">
                <h1>Need Help?</h1>
                <p class="lead"><a href="{{ path('salesperson_help') }}"><i class="fa fa-info fa-fw"></i>Click here</a></p>
                <hr class="my-4">

            </div>
            <div class="col-md-9">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="fa fa-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="{{ path('salesperson_view', {salesperson: salesperson.id}) }}">&nbsp;My Area</a></li>
                    <li class="breadcrumb-item active">&nbsp;Edit Details</li>
                </ol>
                <div class="col-md-12">
                    <div>
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div>
                            {{ form_row(form.first_name) }}
                            {{ form_row(form.last_name) }}
                        </div>
                        {{ form_rest(form) }}

                        <button type="submit" class="btn btn-primary btn-sm">Update</button>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
