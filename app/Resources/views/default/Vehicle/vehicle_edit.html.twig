{% extends '/default/Vehicle/vehicle.html.twig' %}

{% block content %}
    <div class="col-md-12">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div>

            {{ form_row(form.car_registration,  { 'attr':{'disabled':'disabled'}} ) }}
            {{ form_row(form.make,  { 'attr':{'disabled':'disabled'}} ) }}
            {{ form_row(form.model,  { 'attr':{'disabled':'disabled'}} ) }}
            {{ form_row(form.colour,  { 'attr':{'disabled':'disabled'}} ) }}
            {{ form_row(form.capacity,  { 'attr':{'disabled':'disabled'}} ) }}
            {{ form_row(form.car_price) }}
            {{ form_row(form.car_available) }}

        </div>
        {{ form_rest(form) }}

        <button type="submit" class="btn btn-primary btn-sm">Update</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
