{% extends '/default/Customer/customer.html.twig' %}

{% block content %}
    <div class="col-md-12">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div>
            {{ form_row(form.first_name) }}
            {{ form_row(form.last_name) }}
            {{ form_row(form.street) }}
            {{ form_row(form.city) }}
            {{ form_row(form.postcode) }}
            {{ form_row(form.mobile) }}
            {{ form_row(form.email) }}
        </div>
        {{ form_rest(form) }}

        <button type="submit" class="btn btn-primary btn-sm">Update</button>
        {{ form_end(form) }}

    </div>
{% endblock %}
